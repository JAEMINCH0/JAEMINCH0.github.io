<!-- _includes/projects.liquid -->
<div class="card">
  {% if project.img %}
  <img class="card-img-top" src="{{ project.img | relative_url }}" alt="{{ project.title }}">
  {% endif %}
  <div class="card-body">
    <h5 class="card-title">{{ project.title }}</h5>
    <p class="card-text">{{ project.description }}</p>
    <a href="{{ project.url | relative_url }}" class="btn btn-primary">View Project</a>
  </div>
</div> 